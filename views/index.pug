extends layout.pug
block content

	div(class="container-fluid py-4")
		div(class="p-5 mt-2 bg-light rounded-3")
			h1(class="display-5 fw-bold") Library books
			p(class="fs-4") Search for library books in your area
			form
				div(class="row")
					div(class="col-12 col-md-6")
						label(class="form-label", for='txtIsbn') International standard book number
						div(class="input-group mb-3")
							span(class="input-group-text")
								i(class="fas fa-book-open fa-2x")
							input(type='text', class='form-control form-control-lg', id='txtIsbn', placeholder='Enter ISBN', autocomplete='off')
					div(class="col-12 col-md-6")
						label(class="form-label", for='txtPostcode') Postcode
						div(class="input-group mb-3")
							span(class="input-group-text")
								i(class="fas fa-map-marker-alt fa-2x")
							input(type='text', class='form-control form-control-lg', id='txtPostcode', placeholder='Enter your postcode', autocomplete='off')

				div(class="mt-2")
					button(class='btn btn-lg btn-link', type='button', id='btnSearch') Run search
						span(id="spSearchSpinner", class="spinner-grow spinner-grow-sm mx-3", role="status")
					button(class='btn btn-lg btn-link mx-3', type='button', id='btnClear', disabled='disabled') Reset search
			
			p(id="pFeedbackInfo", class="lead") 

	div(class="container-fluid py-2")
		div(class='row')
			div(class='col-12 col-sm-4')
				div(class="alert alert-dismissible alert-info")
					p
						strong Copies
					p(class='lead', id='pFound') 0
			div(class='col-12 col-sm-4')
				div(class="alert alert-dismissible alert-success")
					p
						strong Available
					p(class='lead', id='pAvailable') 0
			div(class='col-12 col-sm-4')
				div(class="alert alert-dismissible alert-warning")
					p
						strong Unavailable
					p(class='lead', id='pUnavailable') 0

		div(class="table-responsive")
			table(id='tblResults', class='table')
				thead
					tr
						th Service
						th Library
						th Available
						th Unavailable
						th Availability
